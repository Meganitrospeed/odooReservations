<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- 1. Define the Calendar View for Appointments -->
    <record id="view_appointment_calendar" model="ir.ui.view">
        <field name="name">appointment.calendar</field>
        <field name="model">appointment.manager</field>
        <field name="arch" type="xml">
            <!-- Note the addition of date_start="date" -->
            <calendar string="Calendario de Citas" date_start="date">
                <!-- Additional fields to display in the calendar event tooltip -->
                <field name="state"/>
                <field name="create_uid"/>
            </calendar>
        </field>
    </record>

    <!-- 2. Define the Action for the Calendar View (admin only) -->
    <record id="action_appointment_calendar" model="ir.actions.act_window">
        <field name="name">Calendario de Citas</field>
        <field name="res_model">appointment.manager</field>
        <field name="view_mode">calendar,tree,form</field>
        <field name="context">{}</field>
        <field name="target">current</field>
        <!-- Restrict to admin users (typically base.group_system) -->
        <field name="groups_id" eval="[(6, 0, [ref('base.group_system')])]"/>
    </record>

    <!-- 3. Define a Menu Item for the Calendar View (visible only to admin users) -->
    <menuitem id="menu_appointment_calendar"
              name="Calendario de Citas"
              parent="menu_appointment_root"
              action="action_appointment_calendar"
              groups="base.group_system"/>
</odoo>
